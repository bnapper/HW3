var x = 230;
var y = 220
var w = 150

function setup() {
  createCanvas(400, 400);
}
  
function draw() {
  background(0);
  noStroke();

  // draw pipe
	fill(265)
  rect(0, 200, x, 20);
  
  // draw drip
	fill(255, 20, 50)
  ellipse(x, y, 10);
	
	fill(25, 200, 200)
	ellipse(w, y, 30);
  
  // down 3 pixels each frame, but maybe should be accelerating?
  y = y + 9
  
  // if invisible for a full “height” amount…
  if (y > height*2) {
    // reset
    y = 220;
  }
}
